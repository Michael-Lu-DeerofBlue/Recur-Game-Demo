/* Generic styles like tailwind */

.horizontal { flex-direction: row; }
.horizontal-reverse { flex-direction: row-reverse; }

.grow-children > *
{
    flex-grow: 1;
}

.grow
{
    flex-grow: 1;
}

.dont-grow
{
    flex-grow: 0;
}

.shrink-children > *
{
    flex-shrink: 1;
}

.shrink
{
    flex-shrink: 1;
}

.dont-shrink
{
    flex-shrink: 0;
}

