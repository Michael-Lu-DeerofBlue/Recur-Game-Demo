/* Specific styles */

.content-container
{
    padding: 10px;
}

.warning-container
{
    background-color: #726c44;
}

.warning-container Label
{
    color: #fff36d;
}

.h1
{
    font-size: 20px;
    -unity-font-style: bold;
}

.h2
{
    font-size: 16px;
    -unity-font-style: bold;
}

.h3
{
    font-size: 12px;
    -unity-font-style: bold;
}

.no_root .h1
{
    color: red;
}

ListView
{
    background-color: #222222;
    padding: 5px;
    margin-top: 5px;
    margin-bottom: 5px;

    border-color: #111111;
    border-width: 1px;
}

ListView Label
{
    -unity-text-align: middle-left;
    padding-left: 10px;
    padding-right: 10px;
}

ListView Label.warning
{
    color: #726c44;
}

.tab-button.active
{
    background-color: transparent;
    border-color: transparent;
}

